{
	"compilerOptions": {
		"target": "es6",
		"module": "CommonJS",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./"
	},
	"include": ["./**/*.ts", "./**/*.d.ts"],
	"exclude": ["node_modules"]
}
